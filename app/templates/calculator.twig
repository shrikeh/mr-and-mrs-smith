<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Mr &amp; Mrs Smith Tech Test</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
<div class="container my-5">
  <h1>Mr &amp; Mrs Smith Tech Test</h1>
  <div class="col-lg-8 px-0">
    <form name="calculator" method="GET" action="/calculate">
      <div class="input-group mb-3">
        <input type="text" class="form-control" name="first" id="first" placeholder="First number">
        <select name="operand" class="form-select" aria-label="Operand" required>
          <option selected value="addition">Add</option>
          <option value="subtraction">Subtract</option>
          <option value="multiplication">Multiply</option>
          <option value="division">Divide</option>
        </select>
        <input type="text" class="form-control" name="second" id="second" placeholder="Second number">
      </div>
      <button type="submit" class="btn btn-primary">Calculate</button>
    </form>
  </div>
  <div class="col-lg-8 px-0">
    <h2>Result:</h2>
    <div class="col-lg-8 px-0">
      {% if calculation  %}
        <div>{{  calculation.first.formal_name | capitalize }}: {{ calculation.first.value }}</div>
        <div>{{  calculation.second.formal_name | capitalize }}: {{ calculation.second.value }}</div>
        <div>{{  calculation.result.formal_name | capitalize }}: {{ calculation.result.value }}</div>
      {% endif %}
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
